<div class="d-flex justify-content-center">
  <nav class="nav">
    <ul class="navbar">
      <li class="nav-item">
        <a class="nav-link active" href="/"> Home </a>
      </li>
      <li class="nav-item">
        <a class="nav-link active" href="/user/register">Sign Up</a>
      </li>
      <li class="nav-item">
        <a class="nav-link active" href="/user/login">Sign in</a>
      </li>
    </ul>
  </nav>
</div>
<div class="mt-3 form-container">
  <span class="form-wrapper bg-dark">
    <form action="/user/register" method="post" class="form-control bg-transparent form-custom">
      <span class="text-center form-heading">
        <h2> Sign Up</h2>
      </span>
      <%- include ('partials/messages.ejs'); -%>
      <div class="mb-3">
        <label for="name" class="form-lable">Name:</label><br>
        <input id="name" name="name" class="form-control" type="text" placeholder="Your name" required>
      </div>
      <div class="mb-3">
        <label for="email" class="form-lable">Email address:</label> <br>
        <input type="email" name="email" class="form-control" placeholder="Email address" required>
      </div>
      <div class="mb-3">
        <label for="password" class="form-lable">Password:</label> <br>
        <input type="password" id="password" class="form-control" name="password" placeholder="Password" required>
      </div>
      <div class="mb-3"><button class="btn btn-primary mt-3 w-100" type="submit"> Sign Up</button></div>
      <div class="text-center small"> Have an account? <a class="link-primary text-decoration-none"
          href="/user/login">login</a></div>
    </form>
  </span>
</div>